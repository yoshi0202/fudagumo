<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <h1 class="text-center pt-5">ログイン</h1>
            <div class="form-bg">
                <div class="form-container p-5">
                <%= form_with scope: :session, url: login_path, local: true do |form| %>
                    <div class="form-group">
                        <%= form.label :メールアドレス %>
                        <%= form.email_field :email, class: "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= form.label :パスワード %>
                        <%= form.password_field :password, class: "form-control" %>
                    </div>
                    <%= form.submit :ログイン, class: "btn btn-primary btn-block" %>
                <% end %>
                </div>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>
<div class="modal hide fade" id="post" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" >
    <div class="modal-dialog" role="document">
        <%= render partial: "layouts/modal"%>
    </div>
</div>


